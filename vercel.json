{
    "buildCommand": "chmod +x build.sh && ./build.sh",
    "outputDirectory": "public",
    "functions": {
        "api/tiktok.js": {
            "memory": 2048,
            "maxDuration": 60,
            "runtime": "nodejs18.x"
        }
    },
    "build": {
        "env": {
            "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true"
        }
    },
    "env": {
        "CHROME_PATH": "/usr/bin/chromium-browser",
        "CHROME_EXECUTABLE": "/usr/bin/chromium-browser"
    }
}